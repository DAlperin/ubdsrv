#!/bin/bash

. common/fio_common

echo -e "\trun fio with delete ublk-loop test"

DEV=/dev/ublkb0
BS=4k
RW=rw
JOBS=4
QUEUES=4
RT=$TRUNTIME
LOOPS=16
PIN_PAGE=0
HALF_LOOPS=$((LOOPS / 2))

CNT=0
while [ $CNT -lt $LOOPS ]; do
	[ $CNT -ge $HALF_LOOPS ] && PIN_PAGE=1
	__create_ublk_dev "loop" $QUEUES 1
	echo -e "\trun fio on ublk(pin page $PIN_PAGE) with delete $CNT"
	__run_fio_libaio "/dev/ublkb0" $BS $RW $JOBS $RT > /dev/null 2 >& 1 &
	sleep 4
	RES=`__remove_ublk_dev_return 0`
	if [ $RES -ne 0 ]; then
			echo -e "\tdelete ublk0 failed"
			ps -eLf | grep ublk
			(cd /sys/kernel/debug/block/ublkb0 && find . -type f -exec grep -aH . {} \;)
			break
	fi
	wait 
	let CNT++
done
