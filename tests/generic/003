#!/bin/bash

. common/fio_common
. common/loop_common

ublk_run_mount_test()
{
	export T_TYPE_PARAMS="-t loop -q $QUEUES -u $1 -g $2 -f $file"

	echo -n -e "\tmount/umount ublk($T_TYPE_PARAMS) with root fstype..."
	__create_ublk_dev

	ROOT_FSTYPE=`findmnt -l -o FSTYPE -n /`

	wipefs -a $DEV > /dev/null 2>&1
	eval mkfs.${ROOT_FSTYPE} $DEV > /dev/null 2>&1

	mount $DEV  $MNT > /dev/null 2>&1

	UBLK_FSTYPE=`findmnt -l -o FSTYPE -n $MNT`
	if [ "$UBLK_FSTYPE" = "$ROOT_FSTYPE" ]; then
			echo "ok"
	else
			echo "failed"
	fi
	umount $MNT > /dev/null 2>&1

	__remove_ublk_dev 0
}

DEV=/dev/ublkb0
QUEUES=2
MNT=`mktemp -d`
URING_COMP=1
NEED_GET_DATA=1

file=`_create_loop_backing_file "loop" 1G`

for NEED_GET_DATA in `seq 0 1`; do
	ublk_run_mount_test $URING_COMP $NEED_GET_DATA
done

rm -fr $MNT

_remove_loop_image $file
